{
  "name": "loan-applications-service",
  "version": "1.0.0",
  "engines": {
    "node": "20.x"
  },
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --silent --colors",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "prisma generate && tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --require reflect-metadata -r tsconfig-paths/register src/index.ts",
    "prepare": "[ \"$NODE_ENV\" != \"production\" ] && husky || echo \"Skipping husky in production\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "9.26.0",
    "@types/cors": "2.8.18",
    "@types/dotenv-flow": "3.3.3",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "^22.15.18",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "16.1.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "^16.0.0",
    "pino-pretty": "13.0.0",
    "prettier": "^3.5.3",
    "prisma": "6.8.1",
    "supertest": "7.1.1",
    "ts-jest": "29.3.3",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.32.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "6.8.1",
    "cors": "2.8.5",
    "dotenv-flow": "4.1.0",
    "express": "5.0.0-beta.1",
    "express-rate-limit": "7.5.0",
    "helmet": "7.2.0",
    "pino": "9.6.0",
    "pino-http": "10.4.0",
    "reflect-metadata": "0.2.2",
    "tsyringe": "4.10.0",
    "zod": "3.24.4"
  }
}
