option_settings:
  # Use our custom hook script instead of the default npm install
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: 20
    ProxyServer: nginx

container_commands:
  01_skip_default_npm:
    command: "touch /opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh && chmod 000 /opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh || true"
    ignoreErrors: true
    leader_only: false
